{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "run backend",
			"args": [
				"--features",
				"bin"
			],
			"options": {
				"cwd": "${workspaceFolder}/tanoshi",
				"env": {
					"DATABASE_URL": "postgres://tanoshi:tanoshi123@192.168.1.109:5432/tanoshi",
					"TOKEN_SECRET_KEY": "secret",
					"PORT": "3030",
					"RUST_LOG": "manga=info"
				}
			}
		},
		{
			"type": "npm",
			"script": "start:dev",
			"path": "tanoshi-web/",
			"problemMatcher": [
				"$rustc"
			],
			"label": "run frontend",
			"detail": "webpack-dev-server --mode development"
		}
	]
}